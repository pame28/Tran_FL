



SQL



CREATE PROCEDURE sp_ObtenerDatosTransaccionFlotante
    @CounterpartCard VARCHAR(20)
AS
BEGIN
    SET NOCOUNT ON;

    SELECT
        t.Bin,
        RIGHT(t.NumeroTarjeta, 4) AS UltimosCuatroDigitos,
        c.NumeroDocumento,
        c.TipoDocumento,
        c.Sexo
    FROM Tarjetas t
    INNER JOIN Clientes c ON t.ClienteId = c.Id
    WHERE t.NumeroTarjeta = @CounterpartCard
END










