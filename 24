using System.Text.Json.Serialization;

namespace transacciones_flotantes.DTOs.TransaccionesFlotantes
{
    public class ProveedorTransaccionesFlotantesResponseDto
    {
        public class ProveedorResponseDto
        {
            [JsonPropertyName("total_floating")]
            public TotalesProveedorDto Total_Floating { get; set; } = new();

            [JsonPropertyName("authorizations")]
            public List<ProveedorAutorizacionDto> Authorizations { get; set; } = new();
        }

        public class TotalesProveedorDto
        {
            [JsonPropertyName("total_HNL")]
            public decimal Total_HNL { get; set; }

            [JsonPropertyName("total_USD")]
            public decimal Total_USD { get; set; }
        }

        public class ProveedorAutorizacionDto
        {
            [JsonPropertyName("date")]
            public DateTime Date { get; set; }

            [JsonPropertyName("merchant_name")]
            public string Merchant_Name { get; set; } = string.Empty;

            [JsonPropertyName("amount")]
            public decimal Amount { get; set; }

            [JsonPropertyName("currency")]
            public string Currency { get; set; } = string.Empty;

            [JsonPropertyName("reference")]
            public string? Reference { get; set; }

            [JsonPropertyName("transaction_type")]
            public string Transaction_Type { get; set; } = string.Empty;

            [JsonPropertyName("movement_type")]
            public string Movement_Type { get; set; } = string.Empty;
        }
    }
}
